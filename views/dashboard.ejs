<% include partials/header %>
    <div class="container">
            <div class="table-responsive">
                <table class="table table-striped text-center" id="tableCenter">
                    <thead>
                        <tr>
                            <th class="text-center"><i class="fas fa-users"></i> 玩家姓名</th>
                            <th class="text-center"><i class="fas fa-chalkboard-teacher"></i> 專業分數</th>
                            <th class="text-center"><i class="fab fa-facebook-square"></i> 人脈分數</th>
                            <th class="text-center"><i class="fas fa-money-bill-alt"></i> 金錢分數</th>
                            <th class="text-center"><i class="fas fa-heart"></i> 愛情指數</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% players.forEach(function(player){ %>
                            <tr>
                                <td> <%= player.name %> </td>
                                <td> <%= player.profession %> </td>
                                <td> <%= player.social %> </td>
                                <td> <%= player.money %> </td>
                                <td> <%= player.love %> </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
    </div>
<% include partials/footer %>